@{
    ViewData["Title"] = "Email Confirmation";
}
@model PersonalSiteMVCConversion.Models.ContactViewModel
<!-- ======= Main ======= -->
<main id="main">

    <!-- ======= Confirmation Section ======= -->
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500" style="margin-top: 10%;">
        <div class="container">

                <div class="col-lg-12">

                    <div class="info-box mt-350">

                    <h3 class="text-center">Message Sent!<i class="bx bx-check-circle"></i></h3>
                        <p class="text-center">
                            Thank you for contacting me! I will respond to your
                            message using the provided email address, @Model.Email, in
                            the next 1-3 business days
                        </p>

                        <br />

                        <div class="offset-3 col-md-6 text-center">
                            <p>
                                You sent the following message on
                                @DateTime.Now.Date.ToShortDateString() at
                                @DateTime.Now.ToShortTimeString() :
                            </p>
                        </div>

                        <br />

                        <div class="offset-3 col-md-6">
                            <p class="text-center">
                                <em>@Model.Message</em>
                            </p>
                        </div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <a href="@Url.Action("Index", "Home")" class="d-flex align-items-center justify-content-center"><i class="bi bi-house"></i>Home</a>
                    </div>

                    

                </div>

        </div>
    </section><!-- End Confirmation Section -->
    

</main><!-- End #main -->