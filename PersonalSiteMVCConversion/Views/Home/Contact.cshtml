@model PersonalSiteMVCConversion.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<!-- ======= Main ======= -->
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-30">GET IN TOUCH - Work In Progress</h2>
                <ol>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>Contact Form</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="row">
                    <p style="color: red; font-style: italic;">
                        @Html.Raw(ViewBag.ErrorMessage)
                    </p>
                </div>
            }

            <div id="contact" class="paddsection">
                <div class="container">
                    <div class="contact-block1">
                        <div class="row">

                            <div class="col-lg-6">
                                <div class="contact-contact">

                                    <ul class="contact-details">
                                        <li><h5>Location:</h5><span>Overland Park, Kansas</span></li>
                                        <li><h5>Phone:</h5><span>913-313-4056</span></li>
                                        <li><h5>Email:</h5><span>twaltonit@gmail.com</span></li>
                                    </ul>

                                </div>
                            </div>


                            @if (ViewBag.RecaptchaError != null)
                            {
                                <div class="alert alert-warning text-center" align="center">
                                    <p style="display:inline">
                                        @ViewBag.RecaptchaError
                                    </p>
                                </div>
                            }

                            <div class="col-lg-6">
                                <form asp-action="Contact" role="form" class="php-email-form">
                                    <div class="row gy-3">

                                        <div class="col-lg-6">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <input asp-for="Name" class="form-control" placeholder="Name" />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <input asp-for="Subject" class="form-control" placeholder="Subject" />
                                                <span asp-validation-for="Subject" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <textarea asp-for="Message" class="form-control" placeholder="Message"></textarea>
                                                <span asp-validation-for="Message" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-12">
                                            <div class="loading">Loading</div>
                                            <div class="error-message"></div>
                                            <div class="sent-message">Your message has been sent. Thank you!</div>
                                        </div>



                                        <div class="mt-0">
                                            <recaptcha align="center" />
                                            <input type="submit" class="btn btn-default btn-send" value="Send message">
                                        </div>



                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        </div>
    </section><!-- End Contact Section -->
    <!-- ======= Map Section ======= -->
    <section class="map mt-2">
        <div class="row">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d99353.47688200134!2d-94.76676005699935!3d38.905776629097645!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c09551a72638d3%3A0x24ce4feb3844f9c8!2sOverland%20Park%2C%20KS!5e0!3m2!1sen!2sus!4v1709533335082!5m2!1sen!2sus" width="200" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </section><!-- End Map Section -->

</main><!-- End #main -->



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <recaptcha-script />
}
